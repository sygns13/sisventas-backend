<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bcs.ventas.dao.mappers.VentaMapper">

    <resultMap id="principalResultMap" type="com.bcs.ventas.model.entities.Venta">
        <result property="id" column="id" />
        <result property="fecha" column="fecha" />
        <result property="clienteId" column="cliente_id" />
        <result property="comprobanteId" column="comprobante_id" />
        <result property="subtotalInafecto" column="subtotal_inafecto" />
        <result property="subtotalAfecto" column="subtotal_afecto" />
        <result property="igv" column="igv" />
        <result property="estado" column="estado" />
        <result property="pagado" column="pagado" />
        <result property="hora" column="hora" />
        <result property="empresaId" column="empresa_id" />
        <result property="userId" column="user_id" />
        <result property="activo" column="activo" />
        <result property="borrado" column="borrado" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAd" column="updated_at" />
    </resultMap>

    <select id="getAllEntities" resultMap="principalResultMap">
        select * from ventas
    </select>

    <select id="listByParameterMap" resultMap="principalResultMap">
        select * from ventas
        <where>
            <if test="ID != null"> AND id = #{ID}</if>
            <if test="FECHA != null"> AND fecha = #{FECHA}</if>
            <if test="CLIENTE_ID != null"> AND cliente_id = #{CLIENTE_ID}</if>
            <if test="COMPROBANTE_ID != null"> AND comprobante_id = #{COMPROBANTE_ID}</if>
            <if test="SUBTOTAL_INAFECTO != null"> AND subtotal_inafecto = #{SUBTOTAL_INAFECTO}</if>
            <if test="SUBTOTAL_AFECTO != null"> AND subtotal_afecto = #{SUBTOTAL_AFECTO}</if>
            <if test="IGV != null"> AND igv = #{IGV}</if>
            <if test="ESTADO != null"> AND estado = #{ESTADO}</if>
            <if test="PAGADO != null"> AND pagado = #{PAGADO}</if>
            <if test="HORA != null"> AND hora = #{HORA}</if>
            <if test="EMPRESA_ID != null"> AND empresa_id = #{EMPRESA_ID}</if>
            <if test="USER_ID != null"> AND user_id = #{USER_ID}</if>
            <if test="ACTIVO != null"> AND activo = #{ACTIVO}</if>
            <if test="BORRADO != null"> AND borrado = #{BORRADO}</if>

            <if test="NO_ID != null"> AND id != #{NO_ID}</if>
            <if test="NO_BORRADO != null"> AND borrado != #{NO_BORRADO}</if>
            <if test="NO_ACTIVO != null"> AND activo != #{NO_ACTIVO}</if>
        </where>
    </select>

    <update id="updateByPrimaryKeySelective">
        update ventas
        <set>
            <if test="FECHA != null"> fecha = #{FECHA}, </if>
            <if test="CLIENTE_ID != null"> cliente_id = #{CLIENTE_ID}, </if>
            <if test="COMPROBANTE_ID != null"> comprobante_id = #{COMPROBANTE_ID}, </if>
            <if test="SUBTOTAL_INAFECTO != null"> subtotal_inafecto = #{SUBTOTAL_INAFECTO}, </if>
            <if test="SUBTOTAL_AFECTO != null"> subtotal_afecto = #{SUBTOTAL_AFECTO}, </if>
            <if test="IGV != null"> igv = #{IGV}, </if>
            <if test="ESTADO != null"> estado = #{ESTADO}, </if>
            <if test="PAGADO != null"> pagado = #{PAGADO}, </if>
            <if test="HORA != null"> hora = #{HORA}, </if>
            <if test="EMPRESA_ID != null"> empresa_id = #{EMPRESA_ID}, </if>
            <if test="USER_ID != null"> user_id = #{USER_ID}, </if>
            <if test="ACTIVO != null"> activo = #{ACTIVO}, </if>
            <if test="BORRADO != null"> borrado = #{BORRADO}, </if>

            <if test="UPDATED_AT != null"> updated_at = #{UPDATED_AT}, </if>
        </set>
        where id=#{ID}
    </update>

</mapper>