<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bcs.ventas.dao.mappers.FacturaProveedorMapper">

    <resultMap id="principalResultMap" type="com.bcs.ventas.model.entities.FacturaProveedor">
        <result property="id" column="id" />
        <result property="proveedorId" column="proveedor_id" />
        <result property="serie" column="serie" />
        <result property="numero" column="numero" />
        <result property="fecha" column="fecha" />
        <result property="pagado" column="pagado" />
        <result property="total" column="total" />
        <result property="observaciones" column="observaciones" />
        <result property="tipoComprobanteId" column="tipo_comprobante_id" />
        <result property="totalSoles" column="total_soles" />
        <result property="enSoles" column="en_soles" />
        <result property="empresaId" column="empresa_id" />
        <result property="userId" column="user_id" />
        <result property="activo" column="activo" />
        <result property="borrado" column="borrado" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAd" column="updated_at" />
    </resultMap>

    <select id="getAllEntities" resultMap="principalResultMap">
        select * from factura_proveedors
    </select>

    <select id="listByParameterMap" resultMap="principalResultMap">
        select * from factura_proveedors
        <where>
            <if test="ID != null"> AND id = #{ID}</if>
            <if test="PROVEEDOR_ID != null"> AND proveedor_id = #{PROVEEDOR_ID}</if>
            <if test="SERIE != null"> AND serie = #{SERIE}</if>
            <if test="NUMERO != null"> AND numero = #{NUMERO}</if>
            <if test="FECHA != null"> AND fecha = #{FECHA}</if>
            <if test="PAGADO != null"> AND pagado = #{PAGADO}</if>
            <if test="TOTAL != null"> AND total = #{TOTAL}</if>
            <if test="OBSERVACIONES != null"> AND observaciones = #{OBSERVACIONES}</if>
            <if test="TIPO_COMPROBANTE_ID != null"> AND tipo_comprobante_id = #{TIPO_COMPROBANTE_ID}</if>
            <if test="TOTAL_SOLES != null"> AND total_soles = #{TOTAL_SOLES}</if>
            <if test="EN_SOLES != null"> AND en_soles = #{EN_SOLES}</if>
            <if test="EMPRESA_ID != null"> AND empresa_id = #{EMPRESA_ID}</if>
            <if test="USER_ID != null"> AND user_id = #{USER_ID}</if>
            <if test="ACTIVO != null"> AND activo = #{ACTIVO}</if>
            <if test="BORRADO != null"> AND borrado = #{BORRADO}</if>

            <if test="NO_ID != null"> AND id != #{NO_ID}</if>
            <if test="NO_BORRADO != null"> AND borrado != #{NO_BORRADO}</if>
            <if test="NO_ACTIVO != null"> AND activo != #{NO_ACTIVO}</if>
        </where>
    </select>

    <update id="updateByPrimaryKeySelective">
        update factura_proveedors
        <set>
            <if test="PROVEEDOR_ID != null">  proveedor_id = #{PROVEEDOR_ID}, </if>
            <if test="SERIE != null">  serie = #{SERIE}, </if>
            <if test="NUMERO != null">  numero = #{NUMERO}, </if>
            <if test="FECHA != null">  fecha = #{FECHA}, </if>
            <if test="PAGADO != null">  pagado = #{PAGADO}, </if>
            <if test="TOTAL != null">  total = #{TOTAL}, </if>
            <if test="OBSERVACIONES != null">  observaciones = #{OBSERVACIONES}, </if>
            <if test="TIPO_COMPROBANTE_ID != null">  tipo_comprobante_id = #{TIPO_COMPROBANTE_ID}, </if>
            <if test="TOTAL_SOLES != null">  total_soles = #{TOTAL_SOLES}, </if>
            <if test="EN_SOLES != null">  en_soles = #{EN_SOLES}, </if>
            <if test="EMPRESA_ID != null"> empresa_id = #{EMPRESA_ID}, </if>
            <if test="USER_ID != null"> user_id = #{USER_ID}, </if>
            <if test="ACTIVO != null"> activo = #{ACTIVO}, </if>
            <if test="BORRADO != null"> borrado = #{BORRADO}, </if>

            <if test="UPDATED_AT != null"> updated_at = #{UPDATED_AT}, </if>
        </set>
        where id=#{ID}
    </update>

</mapper>