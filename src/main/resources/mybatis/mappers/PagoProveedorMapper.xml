<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bcs.ventas.dao.mappers.PagoProveedorMapper">

    <resultMap id="principalResultMap" type="com.bcs.ventas.model.entities.PagoProveedor">
        <result property="id" column="id" />
        <result property="fechaPago" column="fecha_pago" />
        <result property="montoPago" column="monto_pago" />
        <result property="montoReal" column="monto_real" />
        <result property="tipoPago" column="tipo_pago" />
        <result property="bancoIdEmisor" column="banco_id_emisor" />
        <result property="bancoIdProveedor" column="banco_id_proveedor" />
        <result property="cuentaProveedorId" column="cuenta_proveedor_id" />
        <result property="numeroCheque" column="numero_cheque" />
        <result property="facturaProveedorId" column="factura_proveedor_id" />
        <result property="esSoles" column="es_soles" />
        <result property="codigoOperacion" column="codigo_operacion" />
        <result property="empresaId" column="empresa_id" />
        <result property="userId" column="user_id" />
        <result property="activo" column="activo" />
        <result property="borrado" column="borrado" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAd" column="updated_at" />
    </resultMap>

    <select id="getAllEntities" resultMap="principalResultMap">
        select * from pago_proveedors
    </select>

    <select id="listByParameterMap" resultMap="principalResultMap">
        select * from pago_proveedors
        <where>
            <if test="ID != null"> AND id = #{ID}</if>
            <if test="FECHA_PAGO != null"> AND fecha_pago = #{FECHA_PAGO}</if>
            <if test="MONTO_PAGO != null"> AND monto_pago = #{MONTO_PAGO}</if>
            <if test="MONTO_REAL != null"> AND monto_real = #{MONTO_REAL}</if>
            <if test="TIPO_PAGO != null"> AND tipo_pago = #{TIPO_PAGO}</if>
            <if test="BANCO_ID_EMISOR != null"> AND banco_id_emisor = #{BANCO_ID_EMISOR}</if>
            <if test="BANCO_ID_PROVEEDOR != null"> AND banco_id_proveedor = #{BANCO_ID_PROVEEDOR}</if>
            <if test="CUENTA_PROVEEDOR_ID != null"> AND cuenta_proveedor_id = #{CUENTA_PROVEEDOR_ID}</if>
            <if test="NUMERO_CHEQUE != null"> AND numero_cheque = #{NUMERO_CHEQUE}</if>
            <if test="FACTURA_PROVEEDOR_ID != null"> AND factura_proveedor_id = #{FACTURA_PROVEEDOR_ID}</if>
            <if test="ES_SOLES != null"> AND es_soles = #{ES_SOLES}</if>
            <if test="CODIGO_OPERACION != null"> AND codigo_operacion = #{CODIGO_OPERACION}</if>
            <if test="EMPRESA_ID != null"> AND empresa_id = #{EMPRESA_ID}</if>
            <if test="USER_ID != null"> AND user_id = #{USER_ID}</if>
            <if test="ACTIVO != null"> AND activo = #{ACTIVO}</if>
            <if test="BORRADO != null"> AND borrado = #{BORRADO}</if>

            <if test="NO_ID != null"> AND id != #{NO_ID}</if>
            <if test="NO_BORRADO != null"> AND borrado != #{NO_BORRADO}</if>
            <if test="NO_ACTIVO != null"> AND activo != #{NO_ACTIVO}</if>
        </where>
    </select>

    <update id="updateByPrimaryKeySelective">
        update pago_proveedors
        <set>
            <if test="FECHA_PAGO != null"> fecha_pago = #{FECHA_PAGO}, </if>
            <if test="MONTO_PAGO != null"> monto_pago = #{MONTO_PAGO}, </if>
            <if test="MONTO_REAL != null"> monto_real = #{MONTO_REAL}, </if>
            <if test="TIPO_PAGO != null"> tipo_pago = #{TIPO_PAGO}, </if>
            <if test="BANCO_ID_EMISOR != null"> banco_id_emisor = #{BANCO_ID_EMISOR}, </if>
            <if test="BANCO_ID_PROVEEDOR != null"> banco_id_proveedor = #{BANCO_ID_PROVEEDOR}, </if>
            <if test="CUENTA_PROVEEDOR_ID != null"> cuenta_proveedor_id = #{CUENTA_PROVEEDOR_ID}, </if>
            <if test="NUMERO_CHEQUE != null"> numero_cheque = #{NUMERO_CHEQUE}, </if>
            <if test="FACTURA_PROVEEDOR_ID != null"> factura_proveedor_id = #{FACTURA_PROVEEDOR_ID}, </if>
            <if test="ES_SOLES != null"> es_soles = #{ES_SOLES}, </if>
            <if test="CODIGO_OPERACION != null"> codigo_operacion = #{CODIGO_OPERACION}, </if>
            <if test="EMPRESA_ID != null"> empresa_id = #{EMPRESA_ID}, </if>
            <if test="USER_ID != null"> user_id = #{USER_ID}, </if>
            <if test="ACTIVO != null"> activo = #{ACTIVO}, </if>
            <if test="BORRADO != null"> borrado = #{BORRADO}, </if>

            <if test="UPDATED_AT != null"> updated_at = #{UPDATED_AT}, </if>
        </set>
        where id=#{ID}
    </update>

</mapper>